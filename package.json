{
  "name": "esbuild-plugin-copy-module-on-bundle",
  "version": "0.0.0-development",
  "description": "A plugin that copies elected modules and their complete dependency tree to the output directory when bundling",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "build-old": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node",
    "semantic-release": "semantic-release"
  },
  "author": {
    "name": "Steven Ross"
  },
  "license": "MIT",
  "dependencies": {
    "escape-string-regexp": "^5.0.0",
    "fs-extra": "^10.0.0",
    "resolve": "^1.22.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.21",
    "@types/resolve": "^1.20.1",
    "esbuild": "^0.14.13",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "typescript": "^4.5.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stevenross/esbuild-plugin-copy-module-on-bundle.git"
  }
}
